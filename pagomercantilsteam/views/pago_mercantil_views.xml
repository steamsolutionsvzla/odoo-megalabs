<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_pago_mercantil" model="ir.actions.act_window">
        <field name="name">Payments</field>
        <field name="res_model">sale.order.pago.mercantil</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem
        id="menu_sales_payments"
        name="Payments"
        parent="sale.sale_order_menu"
        action="action_pago_mercantil"
        sequence="50" />
    <record id="view_pago_mercantil_list" model="ir.ui.view">
        <field name="name">sale.order.pago.mercantil.list</field>
        <field name="model">sale.order.pago.mercantil</field>
        <field name="arch" type="xml">
            <list>
                <field name="order_id" />
                <field name="merchant_id" />
                <field name="amount" />
                <field name="customer_name" />
                <field name="invoice_number" />
                <field name="trx_type" />
            </list>
        </field>
    </record>
    <record id="view_pago_mercantil_form" model="ir.ui.view">
        <field name="name">sale.order.pago.mercantil.form</field>
        <field name="model">sale.order.pago.mercantil</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="order_id" />
                        <field name="merchant_id" />
                        <field name="amount" />
                        <field name="customer_name" />
                    </group>
                    <group string="Invoice">
                        <field name="invoice_number" />
                        <field name="invoice_creation_date" />
                    </group>
                    <group string="Contract">
                        <field name="contract_number" />
                        <field name="contract_date" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>