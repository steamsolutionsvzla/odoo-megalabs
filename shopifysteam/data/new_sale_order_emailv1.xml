<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="new_sale_order_emailv1" model="mail.template">
            <field name="name">Orden Simple</field>
            <field name="model_id" ref="sale.model_sale_order" />
            <field name="description">Env√≠a un correo al cliente con el enlace para ver su orden.</field>
            <field name="subject">Tu Orden {{ object.name }} ha sido confirmada</field>
            <field name="email_from">megalabs@steamsolutions.tech</field>
            <field name="email_to">{{ object.partner_id.email }}</field>
            <field name="body_html" type="html">
                <div
                    style="margin: 0; padding: 0; background-color: #ffffff; color: #000000; font-family: 'Poppins', sans-serif; font-weight: 400; font-style: normal; text-align: center; line-height: 1.5;">

                    <p style="font-size: 16px; margin: 16px 0;">üëãüèª Hola Sr(a) <t
                            t-esc="object.partner_id.name" />,</p>

                    <p style="font-size: 16px; margin: 16px 0;"> ‚úÖ Tu orden <strong
                            style="font-weight: 700;">
                            <t t-esc="object.name" />
                        </strong> ha sido
                        confirmada. </p>

                    <table
                        style="width: 100%; max-width: 600px; margin: 20px auto; border-collapse: collapse; font-size: 14px;">
                        <thead>
                            <tr>
                                <th
                                    style="padding: 8px; text-align: center; border-bottom: 1px solid #ddd; font-weight: 600;">
                                    Producto</th>
                                <th
                                    style="padding: 8px; text-align: center; border-bottom: 1px solid #ddd; font-weight: 600;">
                                    Cantidad</th>
                                <th
                                    style="padding: 8px; text-align: center; border-bottom: 1px solid #ddd; font-weight: 600;">
                                    Precio</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="object.order_line" t-as="line">
                                <tr>
                                    <td
                                        style="padding: 8px; text-align: center; border-bottom: 1px solid #eee;">
                                        <t t-esc="line.product_id.name" />
                                    </td>
                                    <td
                                        style="padding: 8px; text-align: center; border-bottom: 1px solid #eee;">
                                        <t t-esc="line.product_uom_qty" />
                                    </td>
                                    <td
                                        style="padding: 8px; text-align: center; border-bottom: 1px solid #eee;">
                                        <t
                                            t-esc="format_amount(line.price_subtotal, object.currency_id)" />
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                    <div
                        style="width: 100%; max-width: 600px; margin: 0 auto; text-align: right; padding-right: 10px;">

                        <p style="font-size: 16px; margin: 8px 0;">
                            <strong style="font-weight: 700;">Subtotal:</strong>
                            <t t-esc="format_amount(object.amount_untaxed, object.currency_id)" />
                        </p>

                        <p style="font-size: 16px; margin: 8px 0;">
                            <strong style="font-weight: 700;">Impuestos:</strong>
                            <t t-esc="format_amount(object.amount_tax, object.currency_id)" />
                        </p>

                        <p
                            style="font-size: 18px; margin: 12px 0; border-top: 1px solid #ddd; padding-top: 8px;">
                            <strong style="font-weight: 700;">Total:</strong>
                            <t t-esc="format_amount(object.amount_total, object.currency_id)" />
                        </p>

                        <!-- <p style="font-size: 14px; margin: 8px 0; color: #555;">
                            <strong style="font-weight: 700;">Tasa de cambio (Orden):</strong>
                            <t t-esc="object.currency_rate" />
                        </p> -->

                        <hr style="border: 0; border-top: 1px dashed #eee; margin: 10px 0;" />

                        <p style="font-size: 14px; margin: 4px 0; color: #2c3e50;">
                            <strong style="font-weight: 700;">Tasa BCV hoy:</strong> Bs. <t
                                t-esc="ctx.get('current_bcv_rate')" />
                        </p>

                        <p style="font-size: 18px; margin: 8px 0; color: #d32f2f;">
                            <strong style="font-weight: 700;">Total en Bol√≠vares:</strong> Bs. <t
                                t-esc="'{0:,.2f}'.format(ctx.get('total_in_ves', 0)).replace(',', 'X').replace('.', ',').replace('X', '.')" />
                        </p>

                    </div>

                    <p style="font-size: 16px; margin: 12px 0;">
                        <strong style="font-weight: 700;">Fecha:</strong>
                        <t t-esc="format_date(object.date_order)" />
                    </p>

                    <p style="font-size: 16px; margin: 20px 0;"> Accede a tu orden aqu√≠: <a
                            t-att-href="ctx.get('custom_link', '#')"
                            style="color: #000000; text-decoration: underline; font-weight: 600;">
                        Pagar</a>
                    </p>

                    <p style="font-size: 14px; color: #666666; margin: 24px 0 8px;">
                        ‚ö†Ô∏è No responda a este mensaje. Este correo es generado autom√°ticamente.
                    </p>

                    <br />
                    <br />
                    <br />
                    <br />

                    <p style="font-size: 16px; margin: 16px 0;"> Gracias,<br /> --<br /> El equipo
                        de Megalabs </p>
                </div>
            </field>
        </record>
    </data>
</odoo>