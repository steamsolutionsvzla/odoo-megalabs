<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="payment_processing_page" name="Payment Processing">
        <!-- Barebones layout: no Odoo frontend wrapper -->
        <t t-call-assets="web.assets_frontend"/>

        <style>
            body {
                margin: 0;
                padding: 0;
                min-height: 100vh;
                display: flex;
                justify-content: center;
                align-items: center;
                background: linear-gradient(135deg, #4b6cb7 0%, #182848 100%);
                color: white;
                font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
            }
            .message-card {
                background: rgba(255, 255, 255, 0.12);
                backdrop-filter: blur(12px);
                border-radius: 20px;
                padding: 2.5rem;
                text-align: center;
                max-width: 420px;
                width: 90%;
                box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
                border: 1px solid rgba(255, 255, 255, 0.1);
            }
            .checkmark {
                font-size: 3rem;
                margin-bottom: 1.2rem;
                animation: pulse 1.5s infinite;
            }
            h2 {
                font-size: 1.6rem;
                margin-bottom: 1.2rem;
                font-weight: 600;
            }
            p {
                line-height: 1.6;
                opacity: 0.95;
                font-size: 1.05rem;
            }
            @keyframes pulse {
                0%, 100% { transform: scale(1); }
                50% { transform: scale(1.05); }
            }
        </style>

        <div class="message-card">
            <div class="checkmark">✓</div>
            <h2>Your payment is processing</h2>
            <p>We’ll notify you by email once the transaction is complete.</p>
            <p>
                <em>
                    <span t-translation="on">You can safely close this window.</span>
                </em>
            </p>
        </div>
    </template>
</odoo>