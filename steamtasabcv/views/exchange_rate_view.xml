<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- LIST VIEW -->
    <record id="view_exchange_rate_list" model="ir.ui.view">
        <field name="name">steamtasabcv.exchange.rate.list</field>
        <field name="model">steamtasabcv.exchange.rate</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="currency_id" />
                <field name="rate" />
                <field name="inverse_rate" />
                <field name="active" widget="boolean_toggle" />
            </list>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_exchange_rate_form" model="ir.ui.view">
        <field name="name">steamtasabcv.exchange.rate.form</field>
        <field name="model">steamtasabcv.exchange.rate</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="currency_id" options="{'no_create': True}" />
                            <field name="active" invisible="1" />
                        </group>
                        <group>
                            <field name="rate" />
                            <field name="inverse_rate" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_exchange_rate" model="ir.actions.act_window">
        <field name="name">Exchange Rates</field>
        <field name="res_model">steamtasabcv.exchange.rate</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Exchange Rate record.
            </p>
        </field>
    </record>
    <!-- CRON JOBS (Manual Time Setup) -->

    <record id="ir_cron_bcv_morning" model="ir.cron">
        <field name="name">BCV Fetch Morning</field>
        <field name="model_id" search="[('model', '=', 'steamtasabcv.exchange.rate')]" />
        <field name="state">code</field>
        <field name="code">model.cron_fetch_bcv_rate()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active">True</field>
        </record>

    <record id="ir_cron_bcv_afternoon" model="ir.cron">
        <field name="name">BCV Fetch Afternoon</field>
        <field name="model_id" search="[('model', '=', 'steamtasabcv.exchange.rate')]" />
        <field name="state">code</field>
        <field name="code">model.cron_fetch_bcv_rate()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active">True</field>
    </record>
    <menuitem id="menu_exchange_rate" name="Exchange Rates" action="action_exchange_rate"
        sequence="10" />

</odoo>